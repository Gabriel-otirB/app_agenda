<%- include('includes/head') %>
  <%- include('includes/nav') %>

    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8 my-5">
          <h1 class="text-center">Acesse sua conta ou Crie uma nova</h1>
          <p class="text-center lead">Realize o login ou registre-se abaixo</p>

          <%- include('includes/messages'); %>

            <div class="row">

              <div class="col-lg-6 my-4">
                <div class="card shadow-sm">
                  <div class="card-body">
                    <h4 class="card-title">Registro de Nova Conta</h4>
                    <p class="card-text">Se você ainda não possui uma conta, preencha o formulário abaixo:</p>

                    <form class="form-cadastro" action="/login/register" method="POST">
                      <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                      <div class="form-group">
                        <label>Endereço de E-mail</label>
                        <input type="email" class="form-control" name="email" required>
                      </div>
                      <div class="form-group">
                        <label>Defina sua Senha</label>
                        <input type="password" class="form-control" name="password" required>
                      </div>
                      <button type="submit" class="btn btn-primary btn-block">Criar Conta</button>
                    </form>
                  </div>
                </div>
              </div>

              <div class="col-lg-6 my-4">
                <div class="card shadow-sm">
                  <div class="card-body">
                    <h4 class="card-title">Login à Sua Conta</h4>
                    <p class="card-text">Se você já tem uma conta, faça login abaixo:</p>

                    <form class="form-login" action="/login/login" method="POST">
                      <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                      <div class="form-group">
                        <label>Endereço de E-mail</label>
                        <input type="email" class="form-control" name="email" required>
                      </div>
                      <div class="form-group">
                        <label>Senha</label>
                        <input type="password" class="form-control" name="password" required>
                      </div>
                      <button type="submit" class="btn btn-primary btn-block">Entrar</button>
                    </form>
                  </div>
                </div>
              </div>

            </div>
        </div>
      </div>
    </div>

